{
  "name": "fastify-mcp-server",
  "description": "Easily spin up Model Context Protocol (MCP) servers using Fastify",
  "version": "0.5.0",
  "type": "module",
  "license": "ISC",
  "main": "dist/index.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">= 22"
  },
  "keywords": [
    "fastify",
    "mcp",
    "plugin",
    "streamable",
    "http",
    "modelcontextprotocol",
    "server"
  ],
  "homepage": "https://github.com/flaviodelgrosso/fastify-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flaviodelgrosso/fastify-mcp-server.git"
  },
  "scripts": {
    "dev": "node --watch demo/server.ts",
    "dev:redis": "node --watch demo/server.ts -- --redis",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "test": "c8 --100 node --test test/**/*.test.ts",
    "test:lcov": "c8 --100 --reporter=lcov node --test test/**/*.test.ts",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "inspector": "npx @modelcontextprotocol/inspector",
    "clean": "rimraf node_modules dist coverage",
    "version": "changeset version",
    "release": "changeset tag"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.x",
    "fastify": "^5.x"
  },
  "dependencies": {
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.8.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/node": "^24.10.4",
    "c8": "^10.1.3",
    "close-with-grace": "^2.3.0",
    "eslint": "^9.39.2",
    "fastify": "^5.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "neostandard": "^0.12.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-space-before-function-paren": "^0.0.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": "eslint --max-warnings 0"
  }
}
